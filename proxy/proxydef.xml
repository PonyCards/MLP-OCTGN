	<!-- Event Card template -->
	<template src="proxy/proxyImages/cardTemplates/card-outline.png" default="False">
		<matches>
		<match name="Type" value="Event" />
		</matches>

		<overlayblocks>
		
		<link block="eventBack" />

		<conditional>
			<if property="PlayRequiredElement" contains="Loyalty">
